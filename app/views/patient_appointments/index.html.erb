<h2 class="fc-header-title">Patient Bookings for <%=@current_user.name%></h2>

<div>
  <ul class="nav nav-tabs">
    <li class="active"><%= link_to "Today" %></li>
    <li><%= link_to "Week" %></li>
    <li><%= link_to "Month" %></li>
    <li><%= link_to "All Appointments"%></li>
  </ul>
</div>

<div>
  <table class="table">
    <th>
      <td>Date</td>
      <td>Time</td>
      <td>Patient</td>
    </th>
  </table>
  <table class="table table-striped">
    <tbody>
      <tr>  
        <% @patient_appointments.each do |appointment| %>
          <%= appointment %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

<% @patient_appointments.each do |appointment| %>

<div>
  <% if appointment.appointment_booked %>  
    <div><%= appointment.date.strftime('%A %B %-d, %Y') %></div>
  
    <div><%= appointment.start_time.strftime('%H:%M') %></div>
    
    <div><%= find_respective_doctor(appointment).name %></div>
  </div>
  <% else %>
    <h2>My Appointment Preferences</h2>

    <div>
      <%= appointment.start_time.strftime('%H:%M') %>
    </div>
    <div>
      <%= find_day_from_preference(appointment) %>
    </div>
    <% end %>
<% end %>
