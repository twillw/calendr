<div id="day_calendar">
  <% if @appointment_times == nil %>
    <h2>No appointments available for this day</h2>
  <% else %>
  <% @appointment_times.each do |time| %>
  <% formatted_time = time.strftime("%H:%M") %>
    <table>
      <tr>
        <td><%= time.strftime("%H:%M") %><td>
          <% if time_booked?(time, @current_date, @dr_availability) %>
            <td><%= link_to "Book Appointment", new_patient_appointment_path(time: formatted_time, date: @current_date.to_date, doctor_id: @current_doctor) %></td>
          <% else %>
            <td>Time unavailable</td>
          <% end %>
      </tr>
    </table>
    <% end %>
  <% end %>
</div>