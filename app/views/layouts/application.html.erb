<!DOCTYPE html>
<html>
<head>
  <title>CalenDR</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
</head>
<body>
  <%= render 'layouts/header' %>
    <div class="container">
        <% if @current_user %>
          <div class="col-md-2">
            <%= render 'layouts/side_navigation' %>
          </div>
          <div class="col-md-10">
            <%= yield %>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
  </div>

</body>
</html>
